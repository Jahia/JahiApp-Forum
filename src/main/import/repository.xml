<?xml version="1.0" encoding="UTF-8"?>
<content xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
         xmlns:jnt="http://www.jahia.org/jahia/nt/1.0" xmlns:test="http://www.apache.org/jackrabbit/test"
         xmlns:sv="http://www.jcp.org/jcr/sv/1.0" xmlns:jmix="http://www.jahia.org/jahia/mix/1.0"
         xmlns:j="http://www.jahia.org/jahia/1.0" xmlns:mix="http://www.jcp.org/jcr/mix/1.0" xmlns:rep="internal">
    <templateSets jcr:primaryType="jnt:templateSets">
        <forum changefreq="monthly" j:installedModules="forum" j:siteType="module" j:wcagCompliance="true"
               jcr:mixinTypes="jmix:sitemap" jcr:primaryType="jnt:virtualsite" priority="0.5">
            <templates jcr:primaryType="jnt:templatesFolder">
                <base j:view="apps" jcr:mixinTypes="jmix:theme" jcr:primaryType="jnt:template">
                    <forum j:hiddenTemplate="false" jcr:primaryType="jnt:template">
                        <pagecontent jcr:primaryType="jnt:contentList">
                            <pagecontent j:id="forum-body" j:skin="skins.custom"
                                         jcr:mixinTypes="jmix:skinnable jmix:customSkin"
                                         jcr:primaryType="jnt:contentList">
                                <row column="2col124" jcr:primaryType="jnt:row"/>
                            </pagecontent>
                        </pagecontent>
                        <row-col1 jcr:primaryType="jnt:contentList">
                            <pageBreadcrumb displayCurrentPage="true" displayHome="true"
                                            displayLinkOnCurrentPage="false" jcr:primaryType="jnt:pageBreadcrumb"/>
                            <pageTitle jcr:primaryType="jnt:pageTitle"/>
                            <pagecontent j:allowedTypes="" jcr:primaryType="jnt:area"/>
                        </row-col1>
                        <row-col2 jcr:primaryType="jnt:contentList">
                            <jahiapp-forum-logo.png jcr:primaryType="jnt:contentReference"/>
                            <jahiapp-forum-logo-1.png
                                    j:node="/templateSets/forum/templates/files/jahiapp-forum-logo.png"
                                    jcr:primaryType="jnt:imageReference">
                                <j:translation_en j:alternateText="jahiapp forum logo" jcr:language="en"
                                                  jcr:primaryType="jnt:translation"/>
                            </jahiapp-forum-logo-1.png>
                            <aside j:allowedTypes="" jcr:primaryType="jnt:area"/>
                        </row-col2>
                        <forum-home jcr:primaryType="jnt:pageTemplate">
                            <pagecontent jcr:primaryType="jnt:contentList">
                                <forumNavigation j:bindedComponent="/templateSets/forum/templates/base/forum/forum-home"
                                                 j:view="rooms" jcr:mixinTypes="jmix:renderable"
                                                 jcr:primaryType="jnt:forumNavigation"/>
                                <pageForm buttonLabel="Create room" class="forum-Form" j:requiredMode="live"
                                          j:requiredPermissions="/permissions/actions/forum/createTopic"
                                          jcr:mixinTypes="jmix:requiredPermissions"
                                          jcr:primaryType="jnt:pageFormCreation" stayOnPage="true"
                                          templateNode="/templateSets/forum/templates/base/forum/forum-room"
                                          useDescription="false">
                                    <j:translation_en jcr:language="en" jcr:mixinTypes="mix:title"
                                                      jcr:primaryType="jnt:translation" jcr:title="Create new room"/>
                                </pageForm>
                            </pagecontent>
                        </forum-home>
                        <forum-room jcr:primaryType="jnt:pageTemplate">
                            <pagecontent jcr:primaryType="jnt:contentList">
                                <forumNavigation j:bindedComponent="/templateSets/forum/templates/base/forum/forum-room"
                                                 jcr:mixinTypes="jmix:renderable"
                                                 jcr:primaryType="jnt:forumNavigation"/>
                                <pageForm buttonLabel="Create section" class="forum-Form" j:requiredMode="live"
                                          j:requiredPermissions="/permissions/actions/forum/createTopic"
                                          jcr:mixinTypes="jmix:requiredPermissions"
                                          jcr:primaryType="jnt:pageFormCreation" stayOnPage="true"
                                          templateNode="/templateSets/forum/templates/base/forum/forum"
                                          useDescription="true">
                                    <j:translation_en jcr:language="en" jcr:mixinTypes="mix:title"
                                                      jcr:primaryType="jnt:translation" jcr:title="Create new section"/>
                                </pageForm>
                            </pagecontent>
                        </forum-room>
                        <forum jcr:primaryType="jnt:pageTemplate">
                            <pagecontent jcr:primaryType="jnt:contentList">
                                <topicList j:bindedComponent="/templateSets/forum/templates/base/forum/forum"
                                           jcr:primaryType="jnt:topicList"/>
                            </pagecontent>
                            <aside jcr:primaryType="jnt:contentList">
                                <jahiapp-forum-logo.png jcr:primaryType="jnt:contentReference"/>
                                <add-a-new-topic aClass="forum-post-icon" divClass="forum-buttons"
                                                 j:bindedComponent="/templateSets/forum/templates/base/forum/forum"
                                                 j:requireLoggedUser="false"
                                                 j:requiredPermissions="/permissions/actions/forum/createTopic"
                                                 jcr:mixinTypes="jmix:requiredPermissions"
                                                 jcr:primaryType="jnt:componentLink" targetTemplate="forum-newTopic">
                                    <j:translation_en jcr:language="en" jcr:mixinTypes="mix:title"
                                                      jcr:primaryType="jnt:translation" jcr:title="Add a new topic"/>
                                </add-a-new-topic>
                            </aside>
                        </forum>
                        <forum-newTopic j:hiddenTemplate="true" jcr:primaryType="jnt:pageTemplate">
                            <pagecontent jcr:primaryType="jnt:contentList">
                                <post j:bindedComponent="/templateSets/forum/templates/base/forum/forum-newTopic"
                                      j:requireLoggedUser="false" j:requiredMode="live"
                                      j:requiredPermissions="/permissions/actions/forum/createTopic"
                                      jcr:mixinTypes="jmix:requiredPermissions" jcr:primaryType="jnt:postForm">
                                    <j:translation_en jcr:language="en" jcr:mixinTypes="mix:title"
                                                      jcr:primaryType="jnt:translation" jcr:title="post"/>
                                </post>
                            </pagecontent>
                        </forum-newTopic>
                        <forum-topic j:applyOn="jnt:topic" j:defaultTemplate="true" j:hiddenTemplate="false"
                                     jcr:primaryType="jnt:contentTemplate">
                            <aside jcr:primaryType="jnt:contentList">
                                <jahiapp-forum-logo.png jcr:primaryType="jnt:contentReference"/>
                                <add-a-new-post aClass="forum-post-icon" divClass="forum-buttons"
                                                j:bindedComponent="/templateSets/forum/templates/base/forum/forum-topic"
                                                j:requireLoggedUser="false"
                                                j:requiredPermissions="/permissions/actions/forum/createPost"
                                                jcr:mixinTypes="jmix:requiredPermissions"
                                                jcr:primaryType="jnt:componentLink"
                                                targetTemplate="forum-topic-newPost">
                                    <j:translation_en jcr:language="en" jcr:mixinTypes="mix:title"
                                                      jcr:primaryType="jnt:translation" jcr:title="Add a new post"/>
                                </add-a-new-post>
                            </aside>
                            <pagecontent jcr:primaryType="jnt:contentList">
                                <postsList j:bindedComponent="/templateSets/forum/templates/base/forum/forum-topic"
                                           jcr:primaryType="jnt:postsList" reverseOrder="false"/>
                            </pagecontent>
                        </forum-topic>
                        <forum-topic-newPost j:applyOn="jnt:topic" j:defaultTemplate="false" j:hiddenTemplate="false"
                                             jcr:primaryType="jnt:contentTemplate">
                            <pagecontent jcr:primaryType="jnt:contentList">
                                <post j:bindedComponent="/templateSets/forum/templates/base/forum/forum-topic-newPost"
                                      j:requireLoggedUser="false" j:requiredMode="live"
                                      j:requiredPermissions="/permissions/actions/forum/createPost"
                                      jcr:mixinTypes="jmix:requiredPermissions" jcr:primaryType="jnt:postForm">
                                    <j:translation_en jcr:language="en" jcr:mixinTypes="mix:title"
                                                      jcr:primaryType="jnt:translation" jcr:title="post"/>
                                </post>
                                <postsList
                                        j:bindedComponent="/templateSets/forum/templates/base/forum/forum-topic-newPost"
                                        jcr:primaryType="jnt:postsList" limit="3" reverseOrder="true"/>
                            </pagecontent>
                        </forum-topic-newPost>
                    </forum>
                </base>
                <contents jcr:primaryType="jnt:contentFolder"/>
                <files jcr:primaryType="jnt:folder">
                    <jahiapp-forum-logo.png j:height="66" j:width="129" jcr:mixinTypes="jmix:image"
                                            jcr:primaryType="jnt:file">
                        <jcr:content jcr:mimeType="image/png" jcr:primaryType="jnt:resource"/>
                        <thumbnail jcr:mimeType="image/png" jcr:primaryType="jnt:resource"/>
                        <thumbnail2 jcr:mimeType="image/png" jcr:primaryType="jnt:resource"/>
                    </jahiapp-forum-logo.png>
                </files>
            </templates>
        </forum>
    </templateSets>

    <permissions jcr:primaryType="jnt:permission">
        <actions jcr:primaryType="jnt:permission">
            <forum jcr:primaryType="jnt:permission">
                <createTopic jcr:primaryType="jnt:permission"/>
                <deleteTopic jcr:primaryType="jnt:permission"/>
                <createPost jcr:primaryType="jnt:permission"/>
                <deletePost jcr:primaryType="jnt:permission"/>
                <editPost jcr:primaryType="jnt:permission"/>
                <reportPost jcr:primaryType="jnt:permission"/>
            </forum>
        </actions>
    </permissions>

    <roles>
        <visitor jcr:primaryType="jnt:role"
                 j:permissions="/permissions/actions/forum/createTopic /permissions/actions/forum/createPost"/>
    </roles>
</content>